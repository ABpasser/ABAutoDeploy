doctype
html
  head
    meta(charset="utf-8")
    title 管理员-添加
    meta(name='renderer', content='webkit')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0')
    include ../common/_style.pug
  body
    #layuiadmin-form-admin.layui-form(lay-filter='layuiadmin-form-admin', style='padding: 20px 30px 0 0;')
      .layui-form-item
        label.layui-form-label 登录名
        .layui-input-inline
          input.layui-input(type='text', name='username', lay-verify='required', placeholder='请输入用户名', autocomplete='off')
      .layui-form-item
        label.layui-form-label 登录密码
        .layui-input-inline
          input.layui-input(type='password', name='password', lay-verify='required', placeholder='请输入密码')
      .layui-form-item
        label.layui-form-label 手机号
        .layui-input-inline
          input.layui-input(type='text', name='phone', lay-verify='phone', placeholder='请输入号码', autocomplete='off')
      .layui-form-item
        label.layui-form-label 角色
        .layui-input-inline
          select(name='role', lay-verify='required')
            option(value='') 请选择角色类型
            each item in roleList
              option(value=item.id) #{item.title}
      .layui-form-item
        label.layui-form-label 状态
        .layui-input-inline
          input(type='checkbox', lay-filter='switch', name='status', lay-skin='switch', lay-text='通过|待审核')
      .layui-form-item.layui-hide
        input#LAY-user-front-submit(type='button', lay-submit='', lay-filter='LAY-user-front-submit', value='确认')
    
    script.
      var csrf = '#{csrf}';

    script(src="/public/admin/layuiadmin/layui/layui.js")
    script.
      layui.config({
        base: '/public/admin/layuiadmin/' //静态资源所在路径
      }).extend({
        index: 'lib/index' //主入口模块
      }).use(['index', 'form'], function(){
        var $ = layui.$
        ,form = layui.form;
      })
