doctype
html
  head
    meta(charset="utf-8")
    title 修改密码
    meta(name='renderer', content='webkit')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0')
    include ../common/_style.pug
  body
    .layui-fluid
      .layui-row.layui-col-space15
        .layui-col-md12
          .layui-card
            .layui-card-header 修改密码
            .layui-card-body(pad15='')
              .layui-form(lay-filter='')
                .layui-form-item
                  label.layui-form-label 当前密码
                  .layui-input-inline
                    input.layui-input(type='password', name='oldPassword', lay-verify='required', lay-vertype='tips')
                .layui-form-item
                  label.layui-form-label 新密码
                  .layui-input-inline
                    input#LAY_password.layui-input(type='password', name='password', lay-verify='pass', lay-vertype='tips', autocomplete='off')
                  .layui-form-mid.layui-word-aux 6到16个字符
                .layui-form-item
                  label.layui-form-label 确认新密码
                  .layui-input-inline
                    input.layui-input(type='password', name='repassword', lay-verify='repass', lay-vertype='tips', autocomplete='off')
                .layui-form-item.layui-hide 
                  input(type='hidden',name="id", value=manager.id)
                .layui-form-item
                  .layui-input-block
                    button.layui-btn(lay-submit='', lay-filter='setmypass') 确认修改
      include ../common/_footer.pug
    script.
      var csrf = '#{csrf}';
    script(src='/public/admin/layuiadmin/layui/layui.js')
    script.
      layui.config({
      base: '/public/admin/layuiadmin/' //静态资源所在路径
      }).extend({
      index: 'lib/index' //主入口模块
      }).use(['index', 'set']);

