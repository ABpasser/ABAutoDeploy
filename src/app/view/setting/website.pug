doctype
html
  head
    meta(charset="utf-8")
    title 网站设置
    meta(name='renderer', content='webkit')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0')
    include ../common/_style.pug
  body
    .layui-fluid
      .layui-row.layui-col-space15
        .layui-col-md12
          .layui-card
            .layui-card-header 网站设置
            .layui-card-body(pad15='')
              .layui-form(wid100='', lay-filter='')
                .layui-form-item
                  label.layui-form-label 网站名称
                  .layui-input-block
                    input.layui-input(type='text', name='webname', value=website.webname)
                .layui-form-item
                  label.layui-form-label 网站域名
                  .layui-input-block
                    input.layui-input(type='text', name='weburl', lay-verify='url', value=website.weburl)
