                .layui-form-item.layui-form-text
                  label.layui-form-label 首页标题
                  .layui-input-block
                    textarea.layui-textarea(name='webtitle') #{website.webtitle}
                .layui-form-item.layui-form-text
                  label.layui-form-label META关键词
                  .layui-input-block
                    textarea.layui-textarea(name='webkeyword', placeholder='多个关键词用英文状态 , 号分割') #{website.webkeyword}
                .layui-form-item.layui-form-text
                  label.layui-form-label META描述
                  .layui-input-block
                    textarea.layui-textarea(name='webdescription') #{website.webdescription}
                .layui-form-item.layui-form-text
                  label.layui-form-label 版权信息
                  .layui-input-block
                    textarea.layui-textarea(name='webcopyright') #{website.webcopyright}
                .layui-form-item
                  .layui-input-block
                    button.layui-btn(lay-submit='', lay-filter='set_website') 确认保存
      include ../common/_footer.pug
    script.
      var csrf = '#{csrf}';
